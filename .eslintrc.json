{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "extends": ["airbnb-typescript/base", "prettier"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/jsx-boolean-value": "error",
    "react/display-name": "off",
    "no-alert": "error",
    "no-console": "error"
  }
}
